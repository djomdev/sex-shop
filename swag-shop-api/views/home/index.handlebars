<div class="row">

    <!-- Blog Entries Column -->
    <div class="col-md-8">

        <h1 class="my-4">Listado de productos
            {{!-- <small>Secondary Text</small> --}}
        </h1>

        {{#each products}}

        <!-- Blog Post -->
        <div class="card mb-4">
            <img class="card-img-top" src="/uploads/{{file}}" alt="Card image cap">
            <div class="card-body">
                <h2 class="card-title">{{title}}</h2>
                <p class="card-text">{{body}}</p>
                <a href="/product/{{id}}" class="btn btn-primary">Look for more details &rarr;</a>
            </div>
            <div class="card-footer text-muted">
                Posted on {{generateTime date "llll"}} by
                <a href="#">WebMaster</a>
            </div>
        </div>

        {{/each}}
