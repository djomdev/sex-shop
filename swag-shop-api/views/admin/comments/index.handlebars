<h1>Comments</h1>

<table class="table">
    <thead>
        <tr>
            <th>id</th>
            <th>Owner</th>
            <th>Date</th>
            <th>Body</th>

        </tr>
    </thead>
    <tbody>
        {{#each comments}}
        <tr>
            <td>{{id}}</td>
            <td>{{user.firstName}}</td>
            <td>{{generateTime date 'MMMM Do YYYY'}}</td>
            <td>{{body}}</td>
            <td>
                <form action="/admin/comments/{{id}}?_method=DELETE" method="post">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </td>
        </tr>
        {{/each}}

    </tbody>
</table>